<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="asu.reach.Relaxation"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relaxTitle"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/relax_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/control_layout">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relaxTitle"
        android:layout_marginTop="50dp"
        android:id="@+id/relativeLayout3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/introBtn"
            android:background="@drawable/intro_selector"
            android:layout_toLeftOf="@+id/worryboxBtn"
            android:layout_marginRight="30dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbBtn"
            android:background="@drawable/bb_selector"
            android:layout_below="@+id/introBtn"
            android:layout_toLeftOf="@+id/worryboxBtn"
            android:layout_marginRight="-20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/worryboxBtn"
            android:background="@drawable/worrybox_selector"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tgtBtn"
            android:background="@drawable/tgt_selector"
            android:layout_toRightOf="@+id/worryboxBtn"
            android:layout_below="@+id/reviewBtn"
            android:layout_marginLeft="-40dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reviewBtn"
            android:background="@drawable/review_selector"
            android:layout_toRightOf="@+id/worryboxBtn"
            android:layout_marginLeft="30dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_below="@+id/tgtBtn"
            android:background="@drawable/home_selector"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="onBackClick" />

    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:id="@+id/crab"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/crab_anim"
        android:layout_marginBottom="125dp" />

</RelativeLayout>
