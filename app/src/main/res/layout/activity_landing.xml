<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Landing"
    android:background="@drawable/landing">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/vidLayout"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whiteBGView"
            android:background="@drawable/landing_blob"
            android:layout_marginBottom="100dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="false"
        android:id="@+id/relativeLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddBtn"
            android:background="@drawable/dd_selector"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/sticBtn"
            android:layout_marginLeft="40dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopBtn"
            android:background="@drawable/stop_selector"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="85dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sticBtn"
            android:background="@drawable/stic_selector"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_toLeftOf="@+id/stopBtn"
            android:layout_alignBottom="@+id/stopBtn"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relaxBtn"
            android:background="@drawable/relax_selector"
            android:layout_below="@+id/whBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whBtn"
            android:background="@drawable/wh_selector"
            android:layout_toRightOf="@+id/stopBtn"
            android:layout_alignBottom="@+id/stopBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="-16dp"
        android:layout_marginLeft="-16dp"
        android:id="@+id/topLeft"></RelativeLayout>

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="-16dp"
        android:id="@+id/topRight"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-16dp" />

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-16dp"
        android:id="@+id/bottomLeft"
        android:layout_marginBottom="-16dp" />

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomRight"
        android:layout_marginRight="-16dp"
        android:layout_marginBottom="-16dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
